---
// import TagFilter from './TagFilter.astro';
import BlogPostCard from "./BlogPostCard.astro";
import Navbar from "@/components/ui/Navbar.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/config/site.config";
import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/ui/Footer.astro";
import { SOCIAL_LINKS } from "@/config/nav.config";
// Props
const { posts, allTags, activeTag } = Astro.props;
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
    <Navbar slot="navbar" />

    <section class="mt-32 mb-6 text-center">
        <div>
            <h1 class="text-4xl font-bold text-black mb-4">
                &gt; Mis <span class="text-[var(--color-secondary)]">blogs</span
                ><span class="animate-blink">_</span>
            </h1>
            <p class="text-gray-600 mb-6">
                Si te gustaria que haga un post de algo que te interese solo
                hablame al <span
                    ><a
                        href={SOCIAL_LINKS[2].href}
                        target="_blank"
                        class="text-[var(--color-secondary)]">Instagram</a
                    ></span
                ><span class="animate-blink">_</span>
            </p>
        </div>

        <article class="w-full overflow-hidden">
            {
                posts.length === 0 ? (
                    <p class="text-center text-gray-500 py-8">
                        No hay publicaciones con esta etiqueta.
                    </p>
                ) : (
                    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 max-w-7xl w-full mx-auto p-4 rounded-2xl auto-rows-auto mb-8">
                        {posts.map((post: any) => (
                            <BlogPostCard post={post} />
                        ))}
                    </section>
                )
            }
        </article>
    </section>
    <Footer slot="footer" />
</Layout>
