---
const { message } = Astro.props;
import theresaImage from '../assets/CE_icon.webp'; // tu imagen elegida
---

<div class="flex items-start gap-4 p-4 max-w-2xl mx-auto absolute bottom-2 right-2">
    <div class="relative px-6 py-2
           rounded-2xl border border-white/25 backdrop-blur-xs
           bg-zinc-950/80 text-white
           hocus:border-white/50 hocus:scale-105
           transition-all duration-300 shadow-lg cursor-pointer
           ring-1 ring-inset ring-white/5">
      <p>{message}</p>
      <span class="absolute -top-2 left-4 w-3 h-3 bg-white/20 rotate-45"></span>
    </div>
  <img src={theresaImage.src} alt="Theresa holograma" class="w-24 h-24
         rounded-2xl border border-white/25 backdrop-blur-xs
         bg-zinc-950/80 text-white
         hocus:border-white/50 hocus:scale-105
         transition-all duration-300 shadow-lg cursor-pointer
         ring-1 ring-inset ring-white/5" />
  
</div>